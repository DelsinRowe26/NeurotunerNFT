<Window x:Name="ActWin" x:Class="SimpleNeurotuner.ActivationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNeurotuner"
        mc:Ignorable="d"
        Title="ActivationForm" Height="188" Width="757" Background="#FFD4C8C8" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lbMail" Content="Email" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="69" Height="35" FontSize="18"/>
        <Label x:Name="lbKey" Content="Key" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="69" Height="35" FontSize="18"/>
        <Button x:Name="btnActivation" Content="Activate" HorizontalAlignment="Left" Margin="84,111,0,0" VerticalAlignment="Top" Width="635" Height="26" FontSize="16" FontWeight="Bold" Click="btnActivation_Click"/>
        <TextBox x:Name="tbMail" HorizontalAlignment="Left" Margin="84,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="635" Height="35" FontSize="20"/>
        <TextBox x:Name="tbKey" HorizontalAlignment="Left" Margin="84,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="635" Height="35" FontSize="20"/>

    </Grid>
</Window>
